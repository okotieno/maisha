{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@furaha/contact": ["libs/web/components/contacts/src/index.ts"],
      "@furaha/contacts": ["libs/web/component/contacts/src/index.ts"],
      "@furaha/projects": ["libs/web/components/projects/src/index.ts"],
      "@furaha/shared/icon": ["libs/shared/icon/src/index.ts"],
      "@furaha/shared/theme": ["libs/shared/theme/src/index.ts"],
      "@furaha/team": ["libs/web/components/team/src/index.ts"],
      "@furaha/web/components/about-us": [
        "libs/web/components/about/src/index.ts"
      ],
      "@furaha/web/components/clients": [
        "libs/web/components/clients/src/index.ts"
      ],
      "@furaha/web/components/header": [
        "libs/web/components/header/src/index.ts"
      ],
      "@furaha/web/components/hero": ["libs/web/components/hero/src/index.ts"],
      "@furaha/web/pages/home": ["libs/web/pages/home/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
